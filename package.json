{
  "name": "chatbot-3d",
  "version": "1.0.0",
  "description": "3D Building Data Management System with Chatbot Interface",
  "main": "backend/src/app.js",
  "scripts": {
    "start": "node backend/src/app.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/src/app.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "keywords": [
    "3d",
    "building",
    "postgis",
    "chatbot",
    "nodejs",
    "react",
    "mapping"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  }
}
